<?xml version="1.0" encoding="UTF-8"?>

<?language JavaScript?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="300.0" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client_server.client.controllers.AddUserController">
    <style>
        -fx-padding: 10;
        -fx-border-style: solid inside;
        -fx-border-width: 2;
        -fx-border-insets: 5;
        -fx-border-radius: 5;
        -fx-border-color: blue;
    </style>
    <children>
        <Label prefHeight="17.0" prefWidth="83.0" text="Login" />
        <TextField fx:id="loginField" prefHeight="25.0" prefWidth="100.0" />
        <Label prefHeight="17.0" prefWidth="83.0" text="Password" />
        <TextField fx:id="passwordField" />
        <Label text="Role" />
        <TextField fx:id="roleField" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
              <Button fx:id="addUserBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#createUser" prefHeight="29.0" prefWidth="93.0" text="Add" />
         </children>
      </HBox>
        <Label fx:id="statusLabel" prefHeight="22.0" prefWidth="265.0" textFill="RED" />
    </children>
</VBox>
