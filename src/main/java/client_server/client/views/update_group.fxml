<?xml version="1.0" encoding="UTF-8"?>

<?language JavaScript?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="300.0" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client_server.client.controllers.UpdateGroupController">
    <style>
        -fx-padding: 10;
        -fx-border-style: solid inside;
        -fx-border-width: 2;
        -fx-border-insets: 5;
        -fx-border-radius: 5;
        -fx-border-color: blue;
    </style>
    <children>
        <Label prefHeight="17.0" prefWidth="83.0" text="Group ID" />
        <TextField fx:id="idField" prefHeight="25.0" prefWidth="100.0" />
        <Label prefHeight="17.0" prefWidth="83.0" text="Name" />
        <TextField fx:id="nameField" />
        <Label text="Description" />
        <TextField fx:id="descrField" editable="false" />
        <Button mnemonicParsing="false" onAction="#updateGroup" text="Update" />
        <Label fx:id="statusLabel" textFill="RED" />
    </children>
</VBox>
